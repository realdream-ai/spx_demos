onStart => {
	hide
	setLayer Front
}

onMsg PlantsWin, => {
	hide
}

onMsg GameOver, => {
	hide
}

onMsg StartLevel, => {
	show
}

onBackdrop "背景2", => {
	setXYpos 170, 124
	playPut := false
	for {
		setXYpos 170, 124
		wait 0.1
		repeatUntil touching(Mouse) && mousePressed(), => {
			if touching(Mouse) {
				setGraphicEffect BrightnessEffect, 20
				if !playPut {
					play "pUT"
					playPut = true
				}
			} else {
				setGraphicEffect BrightnessEffect, 0
				playPut = false
			}
		}

		setGraphicEffect BrightnessEffect, 0
		repeatUntil !mousePressed(), => {

		}

		repeatUntil mousePressed(), => {
			stepTo Mouse
		}
	}
}
