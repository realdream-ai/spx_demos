onStart => {
	hide
}

onClick => {
	hide
	broadcast StartGame
}

onMsg PlantsWin, => {
	levelOver = true
	level += 1
	if level < 6 {
		show

		repeatUntil backdropName() != "植物赢了", => {
			if touching(Mouse) {
				setGraphicEffect BrightnessEffect, 20
			} else {
				setGraphicEffect BrightnessEffect, 0
			}
		}
	}
}
