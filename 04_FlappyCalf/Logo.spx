onMsg "menu", => {
	for {
		if calfDie == false {
			for i := 0; i < 10; i++ {
				if calfplay == false {
					changeYpos -0.5
				}
				wait 0.05
			}
			for i := 0; i < 10; i++ {
				if calfplay == false {
					changeYpos 0.5
				}
				wait 0.05
			}
		}
	}
}

onMsg "menu", => {
	setXYpos 0, 55
	setLayer Front
	show
}

onMsg "start", => {
	hide
}

onMsg "tap", => {
	hide
}

onMsg "game over", => {
	stop OtherScriptsInSprite
}