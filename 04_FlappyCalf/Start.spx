onStart => {
	broadcast "menu"
	setXYpos 0, -95
}

onClick => {
	broadcast "start"
	hide
}

onMsg "start", => {
	hide
}

onMsg "menu", => {
	setLayer Front
	show
	for visible {
		if touching(Mouse) {
			setYpos -90
		} else {
			setYpos -95
		}
		wait 0.1
	}
}
onMsg "game over", => {
	stop OtherScriptsInSprite
}